{{ 'header.css' | asset_url | stylesheet_tag }}

<header class="header">
  <nav class="header__nav">
    <button class="header__menu-btn" aria-label="Open navigation menu">
      <img
        src="{{ 'burger-menu.svg' | asset_url }}"
        alt="Burger menu icon"
        class="header__burger-menu-img"
        width="24"
        height="24"
      >
    </button>

    <a href="{{ routes.root_url }}" class="header__logo-link">
      <img src="{{ 'logo.svg' |  asset_url }}" alt="Stellar Soft logo" width="100" height="24">
    </a>

    <ul class="header__menu">
      {% for link in section.settings.menu.links %}
        <li class="header__menu-item">
          {{ link.title | link_to: link.url, class: 'header__menu-link' }}
        </li>
      {% endfor %}
    </ul>

    <a href="{{ routes.cart_url }}" aria-label="Shopping cart">
      <img
        src="{{ "cart-icon.svg" | asset_url }}"
        width="24"
        height="24"
        class="header__cart-img"
        alt=""
        role="presentation"
      >
    </a>
  </nav>
</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
