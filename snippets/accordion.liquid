{%- assign accordion_items = product.metafields.custom.accordion.value -%}

{%- if accordion_items != blank and accordion_items.size > 0 -%}
  <div class="product-accordion">
    {%- for item in accordion_items -%}
      {%- if item.title != blank and item.content != blank -%}
        <div class="product-accordion__item">
          <div class="product-accordion__header">
            <span class="product-accordion__title">{{ item.title }}</span>
            <span class="product-accordion__icon product-accordion__icon--plus">
              <img
                src="{{ 'accordion-plus.svg' | asset_url }}"
                alt="Open icon"
                width="15"
                height="15"
              >
            </span>
            <span class="product-accordion__icon product-accordion__icon--minus">
              <img
                src="{{ 'accordion-minus.svg' | asset_url }}"
                alt="Close icon"
                width="15"
                height="15"
              >
            </span>
          </div>
          <div class="product-accordion__content">
            {{ item.content | metafield_tag }}
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
{%- endif -%}

<style>
  .product-accordion {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: 100%;
  }

  .product-accordion__item {
    width: 100%;
    border: 1px solid #ebebeb;
    border-radius: 8px;
    padding: 16px;
  }

  .product-accordion__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    user-select: none;
    min-height: 24px;
  }

  .product-accordion__title {
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    color: #111111;
    flex: 1;
  }

  .product-accordion__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 15px;
    height: 15px;
    flex-shrink: 0;
  }

  .product-accordion__svg {
    width: 15px;
    height: 15px;
    display: block;
  }

  .product-accordion__icon--minus {
    display: none;
  }

  .product-accordion__item.is-open .product-accordion__icon--plus {
    display: none;
  }

  .product-accordion__item.is-open .product-accordion__icon--minus {
    display: flex;
  }

  .product-accordion__content {
    display: none;
    margin-top: 12px;
    font-family: Poppins, sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    color: #737373;
  }

  .product-accordion__item.is-open .product-accordion__content {
    display: block;
  }

  .product-accordion__content p {
    margin: 0;
    white-space: pre-wrap;
  }

  .product-accordion__content ul,
  .product-accordion__content ol {
    margin: 0;
    padding-left: 20px;
  }

  .product-accordion__content li {
    margin: 0;
  }
</style>
